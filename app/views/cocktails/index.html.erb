<p id="notice"><%= notice %></p>

<h1>Cocktails</h1>

   <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-12 col-md-6 col-md-4">
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">

         <%= link_to cocktail.name, cocktail, {:style => 'color:#FFFFFF;', :class => 'link'} %>
        <%= link_to "+", cocktail_path(cocktail), method: :delete, data: {confirm: 'sure?'}, class: 'link-destroy' %>


        </div>
      </div>

    <% end %>
  </div>



<br>

<%= link_to 'New Cocktail', new_cocktail_path %>



